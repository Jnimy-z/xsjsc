/* pages/details/details.wxss */
view{
  margin: 0;
  padding: 0;
}
.container{
  background-color: #ececec;
  min-height: 100%;
  box-sizing: border-box;
}
/* 轮播图样式 */
.swiper-container{
  width: 750rpx;
  height: 430rpx;
  position: relative;
}
.swiper-box{
  width: 100%;
  height: 430rpx;
}
.slide-image{
  width: 100%;
  height: 430rpx;
  display: inline-block;
  overflow: hidden;
}

/* 文字样式 */
.text-box{
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 20rpx;
  width: 100%;
  position: relative;
}
.name{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 30rpx;
  line-height: 1.4;
  color: #000;
  font-weight: bold;
}
.price{
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
  color: #acacb7;
  font-weight: bold;
  height: 64rpx;
  line-height: 64rpx;
}
.price text{
  display: inline-block;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.price text:first-child{
  width: 20%;
  text-align: left;
  padding-left: 26rpx;
  color: red;
  font-size: 32rpx;
}
.price text:nth-child(2){
  width: 44%;
}
.price text:last-child{
  width: 28%;
  padding-right: 20rpx;
}
.title{
  width: 100%;
  /* 首行缩进 */
  text-indent: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #acacb7;
  padding-right: 40rpx;
}

/* 会员价格优惠 */
.discount{
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  position: relative;
}

.discount text :first-child{ 
  width: 150rpx; 
  height: 60rpx; 
  line-height: 60rpx; 
  background-color : #ff685e;
  color: #fff;
  display: inline-block; 
  text-align: center; 
  border-radius: 10rpx; 
  position: absolute; 
  top: 25rpx; 
  left: 35rpx; 
}
.discount text :last-child{
  width: 300rpx; 
  height: 60rpx; 
  line-height: 60rpx; 
  color: #333; 
  display: inline-block; 
  position: absolute; 
  top: 25rpx; 
  right: 35rpx;
}
/* tab切换 */
.goods-tab-box{
width:750rpx;
position:relative;
background-color:#fff;
margin-top:20rpx;
}
.goods-tab-nav{
display:inline-block;
Width:250rpx;
height:90rpx;
line-height:90rpx;
box-sizing:border-box;
text-align:center;
color:#C7c7cb;
font-Size:32rpx;
border-bottom:2rpx solid rgb(187,187,187);
}
.goods-tab-nav.on{
color:#00aa90;
border-bottom:5rpx solid #00aa90;
}
.goods-content{
box-sizing:border-box;
padding: 40rpx;
font-size:26rpx;
color: #777;
margin-bottom: 100rpx;
/*允许长单词换行默认在长单词 或URL地址内部进行换行*/
word-wrap: break-word;
/* /换行 */
/* word-break: keep-all;  */
}
/* 底部按钮 */
/* 收藏 */
.footer-box{
width:100%;
height:100rpx;
background-color:#fff;
position:fixed;
bottom: 0;
left:0;
display: flex;
box-shadow:0 0 3px rgba(0,0,0,.5);
}
.footer-box .shop-collection{
width:130rpx;
height:100rpx;
position: relative;
line-height:100rpx;
text-align:center;
font-size:20rpx;
padding-top:26rpx;
color:#cacab7;
box-sizing: border-box;
background:url("http:/127.8.8.1/newshopbi/images/collection.jpg") no-repeat center 21rpx;
background-size:44rpx auto;
}
.footer-box .on{
color: #333;
background: url("http:/127.00.1/neshopobi/imases/colectionactive.jpg") no-repeat center 21rpx;
background-size:4rpx aurto;
}
/*购物车按扭式*/
.footer-box .shop-cart-btn{
position: relative;
width:130rpx;
height:100rpx;
line-height:100rpx;
text-align: center;
padding-top:26rpx;
font-size:20rpx;
color:#acacb7;
box-sizing:border-box;
background:url(https://cdn.it120.cc/images/weappshop/cart.png) no-repeat center 21rpx;
background-size:44rpx auto;
}
.footer-box .shop-cart-btn .shop-num{
position: absolute;
color:#e64340;
left:22rpx;
top:-20rpx;
}
/* /加入购物车/立即购买按钮/ */
.footer-box .join-shop-cart,.footer-box .now-buy{
  text-align: center;
  width:250rpx;
line-height: 100rpx;
color: #fff;
font-size:34rpx;
}
.footer-box .join-shop-cart{
background-color:#ff6858;
}
.footer-box .now-buy{
background-color:#e64346;
}
/*底部隐藏框样式*/
.show-popup{
position:fixed;
top: 0;
width:100%;
height:100%;
z-index: 4;
}
.popup-contents{
position:fixed;
left: 0;
bottom: 0;
width:100%;
background-color:#fff;
z-index: 6;
}
.pop-goods-info{
display:flex;
flex-direction:row;
align-items:center;
margin-left:30rpx;
padding:30rpx 0;
border-bottom: 1px solid #eee;
}
.pop-img-box{
width: 120rpx;
height: 124rpx;
overflow:hidden;
margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width:66%;
  height: 100%;
}
.pop-goods-title{
  width:484rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow:hidden;
  font-size:26rpx;
  color: #000;
}
.pop-goods-price{
  font-size:26rpx;
  color: #e64346;
  margin-top:20rpx;
}
.pop-goods-close{
  width: 36rpx;
  height:36rpx;
  flex: 1;
  background:url(https://cdn.it120.cc/images/weappshop/popup-close.png) no-repeat center center;
  background-size:30rpx auto;
  align-self:flex-start;
  margin-top:-10rpx;
}
.buy-num-box{
  display:flex;
  justify-content:space-between;
  padding:30rpx 30rpx 48rpx 0;
  border-top:1px solid #eee;
  margin-top:0;
  align-items:center;
}
.num-label{
  font-size: 26rpx;
  color:#000;
}
.buy-num-box .num-box{
  display: flex;
}
.buy-num-box .num-box .num-jian,.buy-num-box .num-box .num-input,.buy-num-box .num-box .num-jian{
  width: 80rpx;
  text-align: center;
  border:1ppx solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size:28rpx;
}
.buy-num-box .num-box .num-input input{
  width:100%;
}
.popup-join-btn{
  width:100%;
  height:89rpx;
  text-align:center;
  line-height:89rpx;
  font-size:34rpx;
  color:#fff;
  background-color:#e64346;
}
