/* pages/address/address.wxss */
view{
  padding: 0;
  margin: 0;
}
.container{
  background-color: #faefae;
  min-height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0;
}

/* 主体内容 */
.address-box{
  width: 100%;
  height: auto;
  margin-bottom: 150rpx;
}
.address-item{
  box-sizing: border-box;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  padding: 0 20rpx;
  color: rgb(58, 6, 126);
  font-size: 36rpx;
  margin-top: 20rpx;
}
.head{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.head text:first-child{
  float: left;
}
.head text:last-child{
  float: right;
}
.address-con{
  border-bottom: 2rpx solid #fff;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.address-bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.bottom-left{
  box-sizing: border-box;
  position: relative;
  height: 60rpx;
}
.bottom-right{
  box-sizing: border-box;
  position: relative;
  height: 60rpx;
  right: -330rpx;
}


.footBox{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.addAddress{
  width: 50%;
  height: 120rpx;
  background-color: rgb(61, 231, 189);
  float: left;
}
.tomine{
  width: 50%;
  height: 120rpx;
  background-color: rgb(23, 232, 240);
  float: right;
}