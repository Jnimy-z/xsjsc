/* pages/collection/collection.wxss */
view{
  padding: 0;
  margin: 0;
}
.container{
  background-color: #ececec;
  min-height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.header{
  color: #acacb7;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 10rpx;
}
.header text:first-child{
  border-left: 4rpx solid #017a13;
  padding: 0 20rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.header text:last-child{
  float: right;
  margin-right: 20rpx;
  color: #234637;
}

/* 主体内容 */
.box{
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding: 10rpx 20rpx;
  background-color: #fff;
}
.item{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #acacb7;
}
.item-img{
  width: 130rpx;
  height: 130rpx;
  border: 1px solid #ff9;
  border-radius: 10rpx;
  left: -16rpx;
  top: 2rpx;
}
.item-img image{
  width: 100%;
  height: 100%;
}

/* 主体右边部分 */
.item-content{
  height: 130rpx;
  width: 45rpx;
  font-size: 12px;
  color: #453221;
  position: relative;
  left: 0rpx;
}

.item-content .date,.item-content .name{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-content .name{
  font-size: 14rpx;
  color: #ececec;
}

.num{
  width: 100%;
}

.stock{
  color: #0b7a13;
  border-right: 2rpx solid #acacb7;
  padding-right: 10rpx;
}
.number{
  padding: 0 10rpx;
  border-right: 2rpx solid #acacb7;
}
.price{
  color: #ff0000;
  padding-left: 10rpx;
}
.right{
  background-color: #fe4300;
  height: 130rpx;
  line-height: 130rpx;
  width: 100rpx;
  position: relative;
  text-align: center;
  color: #fff;
  border-right: 5rpx;
  right: -10rpx;
}