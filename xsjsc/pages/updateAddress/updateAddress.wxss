/* pages/updateAddress/updateAddress.wxss */
view{
  margin: 0;
  padding: 0;
}
.container{
  min-height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0;
}
.input-box{
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
}
.input-box text{
  box-sizing: border-box;
  width: 180rpx;
  height: 44px;
  line-height: 44px;
  display: inline-block;
  text-align: left;
  font-size: 36rpx;
  padding: 0rpx 20rpx;
}
.weui-cells{
  position: relative;
  margin-top: 1.17647059em;
  line-height: 1.41176471em;
  font-size: 17px;
  width: 500rpx;
}
.weui-cells_after-title{
  margin-top: 0rpx;
  /* border-bottom: 1rpx solid #ececec; */
}
.weui-cell{
  position: relative;
  display: flex;
  align-items: center;
}
.weui-cell_input{
  padding-top: 0;
  padding-bottom: 0;
}
.weui-input{
  width: 100%;
  height: 44px;
  min-height: 44px;
  line-height: 44px;
  cursor: auto;
  display: block;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-size: 36rpx;
}
/* 多行输入的样式 */
.section{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  border-top: 1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
}
textarea{
  padding: 10rpx 20rpx;
  height: 150rpx;
}
/* 开关 */
.position{
  position: relative;
  border-bottom: 1rpx solid #ececec;
}
.section_title{
  height: 44px;
  line-height: 44px;
  padding-left: 20rpx;
}
.body-view{
  position: absolute;
  top: 15rpx;
  right: 20rpx;
}
.btn-area{
  margin-top: 20rpx;
}
/* 选择地址样式 */
.placeholder{
  width: 100%;
  height: 44px;
  line-height: 44px;
}
.placeholder .picker{
  width: 180rpx;
  display: inline-block;
  float: left;
  padding: 0 20rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}
.placeholder .input{
  width: 500rpx;
  display: inline-block;
  height: 44px;
  line-height: 44px;
}
.saveAddress{
  position: relative;
  font-size: 11pt;
  height: 75rpx;
  width: 245px;
  background-color: #95ebd2;
  color: #fff;
  border-radius: 15rpx;
  text-align: center;
  line-height: 75rpx;
  margin: 20rpx auto;
}